{
    "version": 2,
    "rewrites": [
        {
            "source": "/web/(.*)",
            "destination": "/web/$1"
        },
        {
            "source": "/data/(.*)",
            "destination": "/data/$1"
        },
        {
            "source": "/",
            "destination": "/api/auth.py"
        },
        {
            "source": "/((?!web|data|api).*)",
            "destination": "/api/auth.py"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}